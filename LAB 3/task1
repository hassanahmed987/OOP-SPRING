// C++ Program to reverse string using
// std::reverse() method
#include <bits/stdc++.h>
using namespace std;
void reversestring(char arr[100], int length){
	int start=0;
	for(int i=0,i<=length;i++){
		if(arr[i]==''||arr[i]=='\0'){
			int end=i-1;    
		}
	}
}

int main() {
    string s = "Hello world";
    // Using reverse() function to reverse s
    reverse(s.begin(), s.end());

    cout << s;
    return 0;
}
